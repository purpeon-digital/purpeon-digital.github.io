---
import '@/styles/global.css';

interface Props {
  title?: string;
  description?: string;
  locale: 'en' | 'no';
}

const { 
  title = 'Purpeon Digital - IT Consulting',
  description = 'Purpeon Digital - Professional IT consulting services for your business',
  locale = 'no'
} = Astro.props;
---

<!DOCTYPE html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
    <link rel="manifest" href="/favicon/site.webmanifest">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/theme-toggles@4.10.1/css/classic.min.css">
    <title>{title}</title>
    <style>
      /* Anti-flicker: hide body until hydration completes */
      body.loading {
        visibility: hidden;
      }
      body.loaded {
        visibility: visible;
      }
    </style>
    <script is:inline define:vars={{ locale }}>
      // Set initial locale from SSR - must happen before any component loads
      window.__INITIAL_LOCALE__ = locale;
      
      // Set initial theme from persisted value or system preference - must happen before any component loads
      let storedTheme = null;

      try {
        storedTheme = localStorage.getItem('theme');
      } catch (e) {
        // localStorage can fail (e.g., Safari private mode); ignore and use preference
      }
      const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      const initialTheme = storedTheme || (systemPrefersDark ? 'dark' : 'light');

      window.__INITIAL_THEME__ = initialTheme;
      document.documentElement.setAttribute('data-theme', initialTheme);
      
      // Save the locale to localStorage if viewing a language page
      // but don't redirect to avoid flicker
      try {
        const savedLocale = localStorage.getItem('locale');
        if (!savedLocale || (savedLocale !== locale)) {
          localStorage.setItem('locale', locale);
        }
      } catch (e) {
        // Ignore storage failures
      }
    </script>
    <script>
      import 'iconify-icon';
    </script>
  </head>
  <body class="loading">
    <slot />
    <script is:inline>
      // Show body immediately after DOM is ready
      document.body.classList.remove('loading');
      document.body.classList.add('loaded');
    </script>
  </body>
</html>
